{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" type="text/css" href="{{ asset('asset/vendor/login/vendor/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/fonts/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/fonts/login/fonts/iconic/css/material-design-iconic-font.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/vendor/login/vendor/animate/animate.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/vendor/login/vendor/css-hamburgers/hamburgers.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/vendor/login/vendor/animsition/css/animsition.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/vendor/login/vendor/select2/select2.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/vendor/login/vendor/daterangepicker/daterangepicker.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/css/login/css/util.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('asset/css/login/css/main.css') }}">

{% endblock %}

{% block body %}

    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">
                <form class="login100-form validate-form" method="post">

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

					<span class="login100-form-logo">
						<i class="zmdi zmdi-landscape"></i>
					</span>

                    <span class="login100-form-title p-b-34 p-t-27">
						Log in
					</span>

                    <div class="wrap-input100 validate-input" data-validate = "Enter Email">
                        <input class="input100" type="email" name="email" value="{{ last_username }}" id="inputEmail" placeholder="Email" required autofocus>
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input class="input100" type="password" name="password" id="inputPassword" placeholder="Password" required>
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                    </div>

                    {#<div class="contact100-form-checkbox">#}
                        {#<input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">#}
                        {#<label class="label-checkbox100" for="ckb1">#}
                            {#Remember me#}
                        {#</label>#}
                    {#</div>#}

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Login
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>


{% endblock %}

{% block javascripts %}

    <script src="{{ asset('asset/vendor/login/vendor/jquery/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('asset/vendor/login/vendor/animsition/js/animsition.min.js') }}"></script>
    <script src="{{ asset('asset/vendor/login/vendor/bootstrap/js/popper.js') }}"></script>
    <script src="{{ asset('asset/vendor/login/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('asset/vendor/login/vendor/select2/select2.min.js') }}"></script>
    <script src="{{ asset('asset/vendor/login/vendor/daterangepicker/moment.min.js') }}"></script>
    <script src="{{ asset('asset/vendor/login/vendor/daterangepicker/daterangepicker.js') }}"></script>
    <script src="{{ asset('asset/vendor/login/vendor/countdowntime/countdowntime.js') }}"></script>
    <script src="{{ asset('asset/js/login/js/main.js') }}"></script>

{% endblock%}