            <div class="content">

                <div class="limiter">
                    <div class="container-table100">
                        <div class="wrap-table100">
                            <div class="table">

                                <div class="row header">
                                    <div class="cell">
                                        Project Name
                                    </div>
                                    <div class="cell">
                                        Start Date
                                    </div>
                                    <div class="cell">
                                        End Date
                                    </div>
                                    <div class="cell">
                                        Entries
                                    </div>
                                </div>


                                {% for task in tasks %}
                                <div class="row">
                                    <div class="cell">
                                        {{ task.ProjectName }}
                                    </div>
                                    <div class="cell">
                                        {{ task.startDate|date }}
                                    </div>
                                    <div class="cell">
                                        {{ task.endDate|date }}
                                    </div>
                                    <div class="cell" data-title="Location">
                                        <a href="{{ path('add_entry', {'taskId': task.id}) }}" class="btn btn-warning"> Show </a>
                                        <a href="{{ path('add_entry', {'taskId': task.id}) }}" class="btn btn-success"> New </a>
