    <script>

        $("#submit").click(function () {

            var form = $("#_form")[0];
            var formData = new FormData(form);

            $.ajax({
                method: 'POST',
                url: '{{ path('updateUser') }}',
                enctype: 'multipart/form-data',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    console.log(response);
                    // alert(response);
                    // location.reload();
                }
            });

        });

    </script>

{% endblock %}