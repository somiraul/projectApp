            <div class="content">

                <div id="wrapper-identity">

                    <section id="main">
                        {% for user in user %}
                        <header>
                            <span class="avatar"><img src="{{ asset('/uploads/profilePictures/' ~ user.profilePicture) }}" alt="" /></span>
                            <h1>{{ user.firstName }} {{ user.lastName }}</h1>
                        </header>
                        {% endfor %}

                        <form id="_form" enctype="multipart/form-data" method="POST" action="{{ path('updateUser') }}">
                            <div class="fields">

                                <div class="field">
                                    <input type="file" id="_profilePicture" name="_profilePicture"/>
                                </div>

                                {% for user in user %}
                                <div class="field">
                                    <label for="FirstName"> First Name </label>
                                    <input type="text" id="_fname" placeholder="First Name"  value="{{ user.firstName }}" name="_fname" />
                                </div>

                                <div class="field">
                                    <label for="LastName"> Last Name </label>
                                    <input type="text" id="_lname" placeholder="Last Name" value="{{ user.lastName }}" name="_lname" />
                                </div>

                                <div class="field">
                                    <label for="Email"> Email </label>
                                    <input type="email" id="_email" placeholder="Email" value="{{ user.email }}" name="_email" />
                                </div>

                                <div class="field">
                                    <label for="Password"> Password </label>
                                    <input type="text" id="_password" placeholder="Password" name="_password" />
                                </div>

                            </div>
                            {% endfor %}
                            <hr />
                            <ul class="actions special">
                                <li><a href="#" class="button" id="submit"> Update </a></li>
                            </ul>
                        </form>

                        <hr />

                        <footer>
                            <ul class="icons">
                                <li><a href="#" class="fa-twitter">Twitter</a></li>
                                <li><a href="#" class="fa-instagram">Instagram</a></li>
                                <li><a href="#" class="fa-facebook">Facebook</a></li>
                            </ul>
                        </footer>
                    </section>

